<div class="processed_qblock" data-task-id="{{ problem.problem_id }}" data-form-id="{{ problem.form_id or '' }}">
  <div class="qblock">
    {{ problem.text | safe }}
  </div>
  <form class="answer-form" onsubmit="submitAnswerAndCheck(event, '{{ problem.problem_id }}')">
    <input type="text" id="answer_{{ problem.problem_id }}" name="user_answer" placeholder="Ваш ответ" autocomplete="off">
    <button type="submit">Проверить</button>
  </form>
  <div id="task-status-{{ problem.problem_id }}" class="task-status"></div>
  <div class="math-buttons">
    <!-- Кнопки символов можно добавить позже -->
  </div>
  <div class="info-button">?</div>
  <div class="task-info">
    <p><strong>Номер:</strong> {{ problem.task_number }}</p>
    <p><strong>Часть:</strong> {{ problem.exam_part }}</p>
    <p><strong>Макс. балл:</strong> {{ problem.max_score }}</p>
    {% if problem.kes_codes %}
      <p><strong>КЭС:</strong> {{ problem.kes_codes | join(', ') }}</p>
    {% endif %}
    {% if problem.kos_codes %}
      <p><strong>КОС:</strong> {{ problem.kos_codes | join(', ') }}</p>
    {% endif %}
  </div>
</div>
